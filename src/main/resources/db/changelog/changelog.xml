<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		file:./dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd" >
    <changeSet id="1" author="sazonovfm">
        <createTable tableName="post">
            <column name="id" type="varchar">
                <constraints primaryKey="true" />
            </column>
            <column name="additional_data" type="jsonb" />
        </createTable>
        <insert tableName="post">
            <column name="id" value="qwerty"/>
            <column name="additional_data" value='{"a":"ab","b":"bc"}'/>
        </insert>
        <insert tableName="post">
            <column name="id" value="qwerty1"/>
            <column name="additional_data" value='{"a":"a","b":"b"}'/>
        </insert>
        <insert tableName="post">
            <column name="id" value="qwerty2"/>
            <column name="additional_data" value='{"a":"ac","b":"bc"}'/>
        </insert>
    </changeSet>

    <changeSet id="2" author="sazonovfm">
        <createTable tableName="additional_data">
            <column name="name" type="varchar">
                <constraints primaryKey="true" />
            </column>
            <column name="value" type="varchar"/>
            <column name="type" type="varchar"/>
        </createTable>
        <insert tableName="additional_data">
            <column name="name" value="name"/>
            <column name="value" value="important value"/>
            <column name="type" value="string"/>
        </insert>
    </changeSet>
</databaseChangeLog>